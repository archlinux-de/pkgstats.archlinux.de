root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{php,yaml}]
indent_size = 4

[*.{js,css,scss,json,yml,vue}]
indent_size = 2

[composer.json]
indent_size = 4

[*.neon]
indent_style = tab
